<%- include("partials/header"); -%>
<div class="">
  <form class="" action="/" method="post">
    <label style="display:block"> Add new Project:</label>
    <input class="form-control" style="max-width:700px;display:inline-block" type="text" name="addProj" autocomplete="off" value="">
    <button class="btn btn-success mb-1"  type="submit" name="button">Add</button>
  </form>
</div>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Project name:</th>
      <th scope="col">Action:</th>
    </tr>
  </thead>
      <tbody>
        <% foundProjects.forEach(function(element){ %>
        <tr>
          <td class="first"><a class="proj-link"href="issues/<%=element.name%>"> <%= element.name %></a></td>
          <td><form  class="" onsubmit="return confirm('Are you sure you want to delete this project? It will be impossible to restore it')"  action="/delete-proj" method="post">
              <button class="btn btn-danger"  type="submit" name="delProj" value ="<%= element._id %>" >Delete</button>
        </form></td>
    </tr>
    <% }); %>
    </tbody>
  </table>














  <%- include("partials/footer"); -%>
