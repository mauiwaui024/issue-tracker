<%- include("partials/header"); -%>



<div style="max-width:400px; margin:auto" class="text-center mt-4 ">

  <!-- Makes POST request to /register route -->
  <div class="form-container">
    <h3 class="mb-4">Register</h3>
    <form style= margin:auto" action="/register" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="username" required autofocus>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password">
      </div>
      <p>Already have an account? <a href="/login">Login</a></p>
      <button type="submit" class="btn col-12 btn-lg btn-primary">Register</button>
    </form>
  </div>

</div>





<%- include("partials/footer"); -%>
